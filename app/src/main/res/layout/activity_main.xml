<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_number_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/number_1"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/et_number_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="@string/number_2"
        android:inputType="numberDecimal" />

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_add"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plus_symbol"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_subtract"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/minus_symbol"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_multiply"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multiply_symbol"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/divide_symbol"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_weight="1" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_equal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/equal_symbol"
        android:textSize="20dp"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_clear"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textAllCaps="true" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/result"
        android:textSize="20sp" />

</LinearLayout>